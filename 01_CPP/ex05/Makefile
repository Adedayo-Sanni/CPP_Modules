NAME = harl
CFLAGS = -Wall -Werror -Wextra
COMPILE = c++ -std=c++98


CPP = $(wildcard *.cpp)
HPP = $(wildcard *.hpp)

all:
	$(COMPILE) $(CPP) $(CFLAGS) -o $(NAME)
